<%- include ../partials/header.ejs %>

    <%- include ../partials/main_nav.ejs %>

        <!-- Cotent for the Add page -->
        <div class="container">
            <div class="row">
                <div class="col-md-offset-1 col-md-7"></div>
                <h1>
                    <%= title %>
                </h1>

                <form class="form" method="POST">
                    <div class="form-group">
                        <label for="nameTextField">Book Title</label>
                        <input type="text" class="form-control" id="nameTextField" placeholder="Enter the Book Title"
                            name="name" style="width: 50%" required>
                    </div>

                    <div class="form-group">
                        <label for="authorTextField">Author</label>
                        <input type="text" class="form-control" id="authorTextField" placeholder="Enter the Author"
                            name="author" style="width: 50%" required>
                    </div>

                    <div class="form-group">
                        <label for="publishedTextField">Year</label>
                        <input type="text" class="form-control" id="publishedTextField"
                            placeholder="Enter the year of Publication" name="published" style="width: 50%" required>
                    </div>

                    <div class="form-group">
                        <label for="descriptionTextField">Description</label>
                        <textarea type="text" class="form-control" id="descriptionTextField"
                            placeholder="Enter the Description" name="description" style="width: 50%" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="priceTextField">Price</label>
                        <input type="text" class="form-control" id="priceTextField" placeholder="Enter the price"
                            name="price" style="width: 50%" required>
                    </div>
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-edit"></i> Submit</button>
                    <a href="/book-list" class="btn btn-warning"><i class="fas fa-undo"></i>Cancel</a>
                </form>
            </div>
        </div>

        <%- include ../partials/bottom_nav.ejs %>

            <%- include ../partials/footer.ejs %>